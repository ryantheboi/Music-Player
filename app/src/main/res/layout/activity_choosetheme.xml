<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/choosetheme_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageButton
        android:id="@+id/palette_background"
        android:src="@drawable/palette"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:alpha="0.90"
        android:layout_gravity="center_horizontal"
        android:background="#00000000"
        />

    <ImageButton
        android:id="@+id/exit_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00000000"
        />

    <ImageButton
        android:id="@+id/palette_unclickable_btn1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:fillViewport="true"
        android:layout_marginTop="133dp"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="true"
        android:background="#00000000"
        />

    <ImageButton
        android:id="@+id/palette_unclickable_btn2"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:fillViewport="true"
        android:layout_marginTop="173dp"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="true"
        android:background="#00000000"
        />

    <HorizontalScrollView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:fillViewport="true"
        android:layout_marginTop="43dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="center_horizontal"
        android:isScrollContainer="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_light"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/light" />

            <ImageButton
                android:id="@+id/btn_night"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/night" />

            <ImageButton
                android:id="@+id/btn_rem"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/rem" />

            <ImageButton
                android:id="@+id/btn_ram"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/ram" />

            <ImageButton
                android:id="@+id/btn_subaru"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/subaru" />

            <ImageButton
                android:id="@+id/btn_puck"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/puck" />

            <ImageButton
                android:id="@+id/btn_sucrose"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/sucrose" />

            <ImageButton
                android:id="@+id/btn_bronya"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/bronya" />

            <ImageButton
                android:id="@+id/btn_noelle"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:src="@drawable/noelle" />

        </LinearLayout>
    </HorizontalScrollView>

</FrameLayout>