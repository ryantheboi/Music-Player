<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "AppTheme.MusicPopup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name = "ToolbarAppTheme.Playlist">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ActionBar (from Toolbar) and ActionMode theme -->
    <style name="ToolbarAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionModeStyle">@style/ToolbarActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close24dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">@color/nightDark200</item>
        <item name="android:statusBarColor">@color/nightDark200</item>
        <item name="android:fastScrollPreviewBackgroundRight">@drawable/ic_fastscroll_bubble</item>
    </style>

    <style name="ToolbarActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AlertDialogNight" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/selector_night</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/generalTextLight</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/generalGrey</item>
        <!-- Used for the background -->
        <item name="android:background">@color/nightDark200</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/generalGrey</item>
    </style>

    <style name="AlertDialogLight" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/selector_default_lite</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/generalTextDark</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/generalGrey</item>
        <!-- Used for the background -->
        <item name="android:background">@color/lightWhite100</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/generalGrey</item>
    </style>

    <style name="AlertDialogRam" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/selector_ram</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/ramPink700</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/ramPink600</item>
        <!-- Used for the background -->
        <item name="android:background">@color/ramPink100</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/ramPink400</item>
    </style>

    <style name="AlertDialogRem" parent="Theme.AppCompat.Dialog.Alert">
