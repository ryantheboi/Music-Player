    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/generalGrey</item>
        <item name="android:textSize">18sp</item>
        <!-- Used when unfocused -->
        <item name="colorControlNormal">@color/generalGrey</item>
        <!-- Used when focused -->
        <item name="colorControlActivated">@color/generalBlue</item>
        <!-- Used when highlighting text -->
        <item name="android:textColorHighlight">@android:color/holo_blue_light</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MusicNight" parent="ToolbarAppTheme">
        <item name="colorPrimary">@color/nightDark200</item>
        <item name="colorSecondary">@color/nightDark100</item>
        <item name="itemTextColor">@color/selector_night</item>
        <item name="tabTextColor">@color/selector_night</item>
