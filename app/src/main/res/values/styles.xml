<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name = "AppTheme.MusicPopup">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name = "AppTheme.Playlist">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- ActionBar (from Toolbar) and ActionMode theme -->
    <style name="ToolbarAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionModeStyle">@style/ToolbarActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close24dp</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="AlertDialogNight" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/itemnightselectorblue</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorTextPrimaryLight</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/colorTextGrey</item>
        <!-- Used for the background -->
        <item name="android:background">@color/nightPrimaryDark</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/colorTextGrey</item>
    </style>

    <style name="AlertDialogLight" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/itemlightselectorblue</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorTextPrimaryDark</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/colorTextGrey</item>
        <!-- Used for the background -->
        <item name="android:background">@color/lightPrimaryWhite</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/colorTextGrey</item>
    </style>

    <style name="AlertDialogRam" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/itemramselector</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/ramPink700</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/ramPink600</item>
        <!-- Used for the background -->
        <item name="android:background">@color/ramPink100</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/ramPink400</item>
    </style>

    <style name="AlertDialogRem" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/itemremselector</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/remBlue700</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/remBlue600</item>
        <!-- Used for the background -->
        <item name="android:background">@color/remBlue100</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/remBlue400</item>
    </style>

    <style name="AlertDialogSucrose" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/itemsucroseselector</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/sucroseCaramel300</item>
        <!-- Used for the disabled buttons -->
        <item name="android:textColorSecondary">@color/sucroseMint600</item>
        <!-- Used for the background -->
        <item name="android:background">@color/sucroseMint100</item>
        <!-- Used for dialog button background ripple -->
        <item name="android:colorControlHighlight">@color/sucroseMint400</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@color/colorTextGrey</item>
        <item name="android:textSize">18sp</item>
        <!-- Used when unfocused -->
        <item name="colorControlNormal">@color/colorTextGrey</item>
        <!-- Used when focused -->
        <item name="colorControlActivated">@color/colorTextBlue</item>
        <!-- Used when highlighting text -->
        <item name="android:textColorHighlight">@android:color/holo_blue_light</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MusicNight" parent="ToolbarAppTheme">
        <item name="colorPrimary">@color/nightPrimaryDark</item>
        <item name="colorSecondary">@color/nightSecondaryDark</item>
        <item name="itemTextColor">@color/itemnightselectorblue</item>
        <item name="tabTextColor">@color/itemnightselectorblue</item>
        <item name="subtitleTextColor">@color/itemdefaultselectorblue</item>
        <item name="titleTextColor">@color/colorTextPrimaryLight</item>
        <item name="colorAccent">@color/itemnightselectorblue</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MusicLight" parent="ToolbarAppTheme">
        <item name="colorPrimary">@color/lightPrimaryWhite</item>
        <item name="colorSecondary">@color/lightSecondaryWhite</item>
        <item name="itemTextColor">@color/itemlightselectorblue</item>
        <item name="tabTextColor">@color/itemlightselectorblue</item>
        <item name="subtitleTextColor">@color/itemdefaultselectorblue</item>
        <item name="titleTextColor">@color/colorTextPrimaryDark</item>
        <item name="colorAccent">@color/itemlightselectorblue</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MusicRam" parent="ToolbarAppTheme">
        <item name="colorPrimary">@color/ramPink100</item>
        <item name="colorSecondary">@color/ramPink200</item>
        <item name="itemTextColor">@color/itemramselector</item>
        <item name="tabTextColor">@color/itemramselector</item>
        <item name="subtitleTextColor">@color/itemramselectorlite</item>
        <item name="titleTextColor">@color/ramPink600</item>
        <item name="colorAccent">@color/itemramselector</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MusicRem" parent="ToolbarAppTheme">
        <item name="colorPrimary">@color/remBlue100</item>
        <item name="colorSecondary">@color/remBlue200</item>
        <item name="itemTextColor">@color/itemremselector</item>
        <item name="tabTextColor">@color/itemremselector</item>
        <item name="subtitleTextColor">@color/itemremselectorlite</item>
        <item name="titleTextColor">@color/remBlue600</item>
        <item name="colorAccent">@color/itemremselector</item>
    </style>

    <style name="ThemeOverlay.AppCompat.MusicSucrose" parent="ToolbarAppTheme">
        <item name="colorPrimary">@color/sucroseMint100</item>
        <item name="colorSecondary">@color/sucroseMint200</item>
        <item name="itemTextColor">@color/itemsucroseselector</item>
        <item name="tabTextColor">@color/itemsucroseselector</item>
        <item name="subtitleTextColor">@color/itemsucroseselectorlite</item>
        <item name="titleTextColor">@color/sucroseCaramel300</item>
        <item name="colorAccent">@color/itemsucroseselector</item>
    </style>
</resources>
